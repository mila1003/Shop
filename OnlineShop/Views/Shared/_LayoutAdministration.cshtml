<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online shop (Administration)</title>
    <link rel="stylesheet" href="~/css/Administration/Shared.css" />
</head>
<body>
    <div id="container">
        <header>
            <div id="header-top">
                <p>Администрирование</p>
                <a href="~/Admin/Logout">Log out</a>
            </div>
            <div id="header-add-items">
                <a href="~/Administration/CreateCategory">
                    <div class="items">
                        <img src="~/images/Plus.png" />
                        <p>Добавить категорию</p>
                    </div>
                </a>
                <a href="~/Administration/CreateSubcategory">
                    <div class="items">
                        <img src="~/images/Plus.png" />
                        <p>Добавить подкатегорию</p>
                    </div>
                </a>
                <a href="~/Administration/CreateGood">
                    <div class="items">
                        <img src="~/images/Plus.png" />
                        <p>Добавить товар</p>
                    </div>
                </a>
            </div>
        </header>
        <menu>
            <div id="menu-items">
                <div class="items">
                    <a href="~/Administration/Categories?page=1"><div>Категории</div></a>
                </div>
                <div class="items">
                    <a href="~/Administration/Subcategories?page=1"><div>Подкатегории</div></a>
                </div>
                <div class="items">
                    <a href="~/Administration/Goods?page=1"><div>Товары</div></a>
                </div>
            </div>
            @RenderBody()
        </menu>
        <footer>
            <div id="footer-bottom_line">OnlineShop,2020</div>
        </footer>
     </div>
</body>
</html>

