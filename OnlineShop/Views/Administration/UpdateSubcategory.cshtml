@{
    Layout = "_LayoutAdministration";
}
@model IEnumerable<IShop.Models.Category>
<link rel="stylesheet" href="~/css/Administration/Items.css" />
<div id="items-panel-modify">
    <h2>Добавление подкатегории</h2>
    <div>
        <form method="put">
            <input type="hidden" name="id" value="@ViewBag.Subcategory.Id" />
            <div>
                <label for="Name">Наименование:</label>
                <input name="Name" value="@ViewBag.Subcategory.Name" required/>
            </div>
            <div>
                <details>
                    <summary>Категория:</summary>
                    <table>
                        @foreach (IShop.Models.Category category in Model)
                        {
                            <tr>
                                <td>
                                    @if (category.Id == ViewBag.Subcategory.CategoryId)
                                    {
                                     <input type="radio" name="categoryId" value="@category.Id" required checked>
                                    }
                                    else
                                    {
                                     <input type="radio" name="categoryId" value="@category.Id" required>
                                    }
                                </td>
                                <td>
                                    <p>@category.Name</p>
                                </td>
                            </tr>
                        }
                    </table>
                </details>
            </div>
            <div>
                <button type="submit">Сохранить</button>
            </div>
        </form>
    </div>
</div>
